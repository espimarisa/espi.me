root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# Batch files require crlf.
[*.bat]
end_of_line = crlf

# Do not remove trailing whitespace from markdown.
[*.md]
trim_trailing_whitespace = false

# YAML requires spaces for indentation.
[*.{yaml,yml}]
indent_size = 2
indent_style = space
