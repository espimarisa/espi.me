# Top-most EditorConfig file indicator. Stops searching in parent directories.
root = true

# Default settings for all files unless overridden below.
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Do not remove trailing whitespace (important for hard breaks).
[*.md]
trim_trailing_whitespace = false

# Use 2 spaces for indentation (common YAML convention).
[*.{yaml,yml}]
indent_size = 2
