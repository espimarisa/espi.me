{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": ["./**/*.{css,js,json}", "!**/node_modules", "!**/_site"]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {}
				}
			}
		}
	},
	"formatter": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"root": true,
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
