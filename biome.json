{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

	"files": {
		"ignore": [
			"**/node_modules/*",
			"**/_site/*",
			"./src/css/syntax.css",
			"./src/css/normalize.css"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"ignore": [
			"**/node_modules/*",
			"**/_site/*",
			"./src/css/syntax.css",
			"./src/css/normalize.css"
		],
		"enabled": true,
		"formatWithErrors": true,
		"lineWidth": 80,
		"indentStyle": "tab"
	},
	"linter": {
		"ignore": [
			"**/node_modules/*",
			"**/_site/*",
			"./src/css/syntax.css",
			"./src/css/normalize.css"
		],
		"enabled": true,
		"rules": {
			"complexity": {
				"noExcessiveCognitiveComplexity": "off"
			},
			"correctness": {
				"noNodejsModules": "off"
			},
			"all": true,
			"style": {
				"noNonNullAssertion": "off",
				"useFilenamingConvention": "off",
				"useNamingConvention": "off",
				"noParameterProperties": "off",
				"noDefaultExport": "off"
			}
		}
	},
	"organizeImports": {
		"ignore": [
			"**/node_modules/*",
			"**/_site/*",
			"./src/css/syntax.css",
			"./src/css/normalize.css"
		],
		"enabled": true
	},
	"javascript": {
		"globals": ["Bun", "JSX"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
