{
	"name": "@espimarisa/espi.me",
	"version": "develop",
	"private": true,
	"description": "My personal website, blog, and portfolio, powered by Eleventy.",
	"homepage": "https://espi.me",
	"bugs": {
		"url": "https://github.com/espimarisa/espi.me/issues",
		"email": "hi@espi.me"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:espimarisa/espi.me.git"
	},
	"license": "zlib",
	"author": {
		"name": "Espi Marisa",
		"email": "hi@espi.me",
		"url": "https://espi.me"
	},
	"type": "module",
	"scripts": {
		"build": "NODE_ENV=PRODUCTION bunx @11ty/eleventy",
		"clean": "rm -rf _site",
		"dev": "bun run clean && NODE_ENV=DEVELOPMENT bunx @11ty/eleventy --serve --watch",
		"format": "prettier --write .",
		"lint": "biome lint --verbose . && prettier --check .",
		"lint:fix": "biome lint --verbose --fix ..",
		"start": "NODE_ENV=PRODUCTION bunx @11ty/eleventy --serve --quiet",
		"test": "bun run build && bun run lint"
	},
	"dependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
		"@11tyrocks/eleventy-plugin-sass-lightningcss": "^1.3.0",
		"@aloskutov/eleventy-plugin-external-links": "^2.1.1",
		"@fontsource/atkinson-hyperlegible-mono": "^5.2.9",
		"@fontsource/atkinson-hyperlegible-next": "^5.2.5",
		"eleventy-plugin-compress": "^1.0.5",
		"eleventy-plugin-gen-favicons": "^1.1.3",
		"html-minifier-next": "^1.1.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"prettier": "^3.6.2",
		"prettier-plugin-jinja-template": "^2.1.0"
	},
	"packageManager": "bun@1.2.19",
	"trustedDependencies": [
		"@biomejs/biome",
		"@parcel/watcher",
		"sharp"
	]
}
