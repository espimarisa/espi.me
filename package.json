  "author": "Espi <espi@riseup.net> (https://espi.me)",
  "homepage": "https://github.com/sysdotini/espi.me#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysdotini/espi.me.git"
  },
  "bugs": {
    "url": "https://github.com/sysdotini/espi.me/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=6.0.0"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production eleventy",
    "build:css": "cross-env NODE_ENV=production postcss ./src/css/**/*.css --dir ./dist/css",
    "dev": "npm run build:css && cross-env NODE_ENV=development eleventy --watch --serve",
    "format": "cross-env prettier --write './**/**/*.{css,cjs,js,json,sass,scss,liquid,md,mjs,toml,ts,yml}'",
    "prebuild": "cross-env rimraf ./_site/",
    "test": "eslint . && prettier --c ."
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@sysdotini/eslint-config": "^3.1.1",
    "autoprefixer": "^10.4.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.12",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.1"
  }
}
