{
  "private": "true",
  "name": "@sysdotini/espi.me",
  "version": "5.0.0",
  "description": "My personal website, powered by Eleventy.",
  "license": "zlib",
  "author": "Espi Marisa <espi@riseup.net> (https://espi.me)",
  "homepage": "https://github.com/sysdotini/espi.me#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysdotini/espi.me.git"
  },
  "bugs": {
    "url": "https://github.com/sysdotini/espi.me/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "npm run build:eleventy && npm run build:css",
    "build:eleventy": "cross-env NODE_ENV=production ELEVENTY_ENV=production eleventy",
    "build:css": "cross-env NODE_ENV=production postcss './_site/css/**/*.css' -d './_site/css'",
    "dev": "cross-env concurrently \"npm run dev:eleventy\" \"npm run dev:css\"",
    "dev:css": "cross-env NODE_ENV=development postcss './_site/css/**/*.css' -d './_site/css' -w",
    "dev:eleventy": "cross-env NODE_ENV=development ELEVENTY_ENV=development eleventy --watch --serve",
    "format": "cross-env prettier --write './**/**/*.{css,js,json,sass,scss,liquid,md,ts}'",
    "prebuild": "cross-env rimraf ./_site/",
    "start": "npm run build && cross-env NODE_ENV=production ELEVENTY_ENV=production eleventy --serve",
    "test": "eslint . && prettier --c ."
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@fontsource/atkinson-hyperlegible": "^4.5.7",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@sardine/eleventy-plugin-tinyhtml": "^0.2.0",
    "@sysdotini/eslint-config": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.9",
    "eleventy-plugin-external-links": "^1.1.2",
    "eleventy-sass": "^1.3.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "modern-normalize": "^1.1.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  }
}
