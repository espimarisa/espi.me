{
  "private": "true",
  "name": "@sysdotini/espi.me",
  "version": "4.0.0-alpha",
  "description": "My personal website and blog.",
  "license": "MIT",
  "author": "Espi <espi@riseup.net> (https://espi.me)",
  "homepage": "https://github.com/sysdotini/espi.me#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysdotini/espi.me.git"
  },
  "bugs": {
    "url": "https://github.com/sysdotini/espi.me/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:eleventy",
    "build:eleventy": "cross-env NODE_ENV=production ELEVENTY_ENV=production eleventy",
    "build:css": "cross-env NODE_ENV=production postcss './src/assets/css/**/*.css' -d './_site/assets/css'",
    "dev": "cross-env concurrently \"npm run dev:css\" \"npm run dev:eleventy\"",
    "dev:css": "cross-env NODE_ENV=development postcss './src/assets/css/**/*.css' -d './_site/assets/css' -w",
    "dev:eleventy": "cross-env NODE_ENV=development ELEVENTY_ENV=development eleventy --watch --serve",
    "format": "cross-env prettier --write './**/**/*.{css,cjs,js,json,sass,scss,liquid,md,mjs,toml,ts,yml}'",
    "prebuild": "cross-env rimraf ./_site/",
    "start": "npm run build && cross-env NODE_ENV=production ELEVENTY_ENV=production eleventy --serve",
    "test": "eslint . && prettier --c ."
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@sardine/eleventy-plugin-tinyhtml": "^0.1.0",
    "@sysdotini/eslint-config": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.5.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.14",
    "eleventy-plugin-seo": "^0.5.2",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "modern-normalize": "^1.1.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sakura.css": "github:oxalorg/sakura",
    "typescript": "^4.5.4"
  }
}
