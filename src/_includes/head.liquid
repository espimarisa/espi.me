<meta charset="utf-8" />
<meta name="description" content="{{ description }}" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<meta name="theme-color" content="#ffa500" />
<meta name="msapplication-navbutton-color" content="#ffa500" />
<meta name="apple-mobile-web-app-status-bar-style" content="#ffa500" />

<meta property="og:title" content="{{ title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ url }}" />
<meta property="og:description" content="{{ description }}" />
<meta property="og:image" content="{{ "/img/favicon.png" | url }}" />

<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content="{{ title }}" />
<meta name="twitter:description" content="{{ description }}" />
<meta name="twitter:image" content="{{ "/img/favicon.png" | url }}">
<meta name="twitter:image:alt" content="{{ title }}" />

<link
  rel="icon"
  type="image/x-icon"
  href="{{ "/img/favicon.png" | url }}" />

<link
  href="{{ "/css/index.css" | url }}"
  type="text/css"
  rel="stylesheet">

{% comment %} append title to stuff {% endcomment %}
{% if page.url != "/" %}
  <title>{{ title }} :: Espi Marisa</title>
{% else %}
  <title>{{ title }}</title>
{% endif %}
