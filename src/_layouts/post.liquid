<!doctype html>
<html lang="en">
  <head>
    {% include head.liquid %}
  </head>

  <body>
    {% comment %} Header {% endcomment %}
    <header id="journal-header">
      <h1>{{ title }}</h1>
      <h2>{{ description }}</h2>
      <small>{{ page.date | postDate }}</small>
    </header>

    {% comment %} Content {% endcomment %}
    <section id="journal-body">
      {{ content }}
    </section>

    {% comment %} Footer {% endcomment %}
    <footer>
      <ul>
        <li><a href="/">home</a></li>
        <li><a href="/journal/">all journal entries</a></li>
      </ul>
    </footer>
  </body>
</html>
