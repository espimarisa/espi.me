---
interface Props {
  title?: string;
  description?: string;
  favicon?: URL;
  url?: string;
}

const { title, description, favicon, url } = Astro.props;
---

<head>
  <!-- Metadata -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta content="#ff0070" name="theme-color" />
  <meta content="#ff0070" name="msapplication-navbutton-color" />
  <meta content="#ff0070" name="apple-mobile-web-app-status-bar-style" />

  <!-- Open graph -->
  <meta property="og:title" content={title} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={url} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={favicon} />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@espidotme" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={favicon} />
  <meta name="twitter:image:alt" content="Espi Marisa" />

  <!-- Mastodon -->
  <link rel="me" href="https://wetdry.world/@espi" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href={favicon} />

  <!-- Title -->
  <title>{title}</title>

  <slot />
</head>
