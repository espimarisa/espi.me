---
import { projects } from "@/utils/projects.ts";
---

<h2>Projects</h2>
<p>Some notable things that I've created or contributed to:</p>

<div class="project-list">
  {
    Object.values(projects).map((project) => {
      return (
        <div class="project">
          <a href={project.href} title={project.name} target="_blank">
            <p class="project-name">{project.name}</p>
            <p class="project-description">{project.description}</p>
            <p class="project-tech">{project.technologies.join(", ")}</p>
          </a>
        </div>
      );
    })
  }
</div>

<style lang="scss">
  @use "@/styles/variables";

  h2,
  p {
    margin: auto;
  }

  .project-list {
    margin-top: 1rem;
    display: flex;
    flex-flow: row wrap;
    gap: 1rem;

    @media screen and (max-width: 1000px) {
      flex-flow: column wrap;
    }
  }

  .project {
    background-color: variables.$color-white-contrast-2;
    border: 1px solid variables.$color-purple;
    box-sizing: border-box;
    flex: 0 1 calc(50% - 1rem);
    font-size: 1.125rem;

    a {
      color: inherit;
      text-decoration: none;
      display: block;
      padding: 0.5rem;

      &:visited {
        text-decoration: none;
      }
    }

    &:hover {
      border: 1px solid variables.$color-purple;
    }

    @media (prefers-color-scheme: dark) {
      border: 1px solid variables.$color-pink;
      background-color: variables.$color-purple-dark-contrast;

      &:hover {
        border: 1px solid variables.$color-pink;
      }
    }
  }

  .project-name {
    font-size: 1.25rem;
    color: variables.$color-purple;

    @media (prefers-color-scheme: dark) {
      color: variables.$color-pink;
    }
  }

  .project-description {
    font-size: 1.125rem;
  }

  .project-tech {
    font-size: 1rem;
    font-style: italic;
  }
</style>
