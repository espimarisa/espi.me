{% comment %} Webring {% endcomment %}
<details>
	<summary>
		<span class="has-no-margin">webring</span>
	</summary>
	<p class="has-no-margin">why hello there, 88x31 traveller!</p>
	<ul class="webring-list">
		{%- for ring in collections.webring %}
			{% if ring.data.link %}
				<a href="{{ ring.data.link }}" title="{{ ring.data.name }}" class="webring-image" target="_blank">
					<img
						src="/img/webring/{{ ring.data.file | url }}"
						alt="{{ ring.data.title }}"
						title="{{ ring.data.title }}"
						width="88px"
						height="31px" />
				</a>
			{% else %}
				<img
					src="/img/webring/{{ ring.data.file | url }}"
					alt="{{ ring.data.title }}"
					title="{{ ring.data.title }}"
					width="88px"
					height="31px" />
			{% endif %}
		{%- endfor %}
	</ul>
</details>
